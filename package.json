{
  "name": "typescript-boilerplate-project",
  "version": "1.0.0",
  "description": "A boilerplate for Typescript projects",
  "main": "index.js",
  "devDependencies": {
    "@types/jest": "^22.0.3",
    "jest": "~22.0.3",
    "lodash": "^4.17.4",
    "moment": "^2.20.1",
    "ts-jest": "^22.0.3",
    "ts-node": "^5.0.1",
    "tslint": "~5.8.0",
    "typescript": "~2.7.2"
  },
  "dependencies": {
    "@types/filesystem": "^0.0.28",
    "@types/moment": "^2.13.0",
    "@types/node": "^7.0.5",
    "file-system": "^2.2.2"
  },
  "scripts": {
    "build": "tsc --p tsconfig.json",
    "lint": "tslint -t stylish --project tsconfig.json",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
